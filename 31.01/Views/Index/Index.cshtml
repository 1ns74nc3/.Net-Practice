@{
    ViewBag.Title = "Home Page";
}

<div class="content">
    <div class="article-list">
        @foreach (var item in Model)
        {
            <div>
                <h4>@item.DatePublished</h4>
                <h2>Author</h2>
                <h3>Firstname: @item.AuthorFirstName</h3>
                <h3>Lastname: @item.AuthorLastName</h3>
                <p>@item.ArticleText</p>
            </div>
        }
    </div>
    <div class="navbar-right">
        <div class="container">
            <div class="row">
                <div class="sidebar-nav">
                    <div class="navbar navbar-default" role="navigation">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <span class="visible-xs navbar-brand">Sidebar menu</span>
                        </div>
                        <div class="navbar-collapse collapse sidebar-navbar-collapse">
                            <ul class="nav navbar-nav">
                                <li class="active"><a href="/Index/Index">Main page</a></li>
                                <li><a href="/Guest/Guest/">Guest page</a></li>
                                <li><a href="/User/UserProfile/">Profile</a></li>
                            </ul>
                        </div><!--/.nav-collapse -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
       