@{
    ViewBag.Title = "Guest";
}

<h2>Guest</h2>
<div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-6">
        <div class="reviews-list article-list">
            @foreach (var item in Model)
            {
                <div>
                    <h4>@item.CommentDate</h4>
                    <h3>@item.CommentAuthor</h3>
                    <p>@item.CommentText</p>
                </div>
            }
        </div>
    </div>
    <div class="col-md-4">
        @using (Html.BeginForm("Guest", "Home", FormMethod.Post))
        {
            <p>Enter your name:</p>
            @Html.TextBox("guestName", "Enter your name...")
            <br />
            <br />
            <p>Enter review:</p>
            @Html.TextArea("reviewTextBox", "Enter your review...")
            <br />
            <br />
            <button>Submit</button>
        }
    </div>
    <div class="col-md-1">
    </div>
</div>

